{
  "name": "bcgov-wordpress-plugin-template",
  "version": "1.0.0",
  "description": "BCGov WordPress Plugin Template",
  "author": "govwordpress@gov.bc.ca",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Block Theme",
    "BCGov",
    "Plugin",
    "Gutenberg"
  ],
  "homepage": "https://github.com/bcgov/wordpress-plugin-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/wordpress-plugin-template.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/wordpress-plugin-template/issues",
    "email": "govwordpress@gov.bc.ca"
  },
  "engines": {
    "node": ">=22.16.0 <= 23"
  },
  "main": "index.js",
  "devDependencies": {
    "@bcgov/wordpress-eslint": "git+https://github.com/bcgov/wordpress-eslint.git#semver:1.x",
    "@bcgov/wordpress-stylelintrc": "git+https://github.com/bcgov/wordpress-stylelintrc.git#semver:1.x",
    "@wordpress/scripts": "^30.20.0",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0"
  },
  "scripts": {
    "start": "wp-scripts start",
    "build": "wp-scripts build",
    "lint:css": "wp-scripts lint-style 'src/**/*.scss' --allow-empty-input",
    "fix:css": "wp-scripts lint-style 'src/**/*.scss' --fix --allow-empty-input",
    "lint:js": "wp-scripts lint-js 'src/**/*.js'",
    "fix:js": "wp-scripts lint-js 'src/**/*.js' --fix",
    "test": "npm run test:unit",
    "test:unit": "wp-scripts test-unit-js --passWithNoTests"
  }
}
